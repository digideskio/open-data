<% companies.each_with_index do |company,i| -%>
  <div class="company">
    <%= link_to image_tag(company.logo.url(:thumb), :class => 'thumb'), company.link, :target => '_blank', :class => 'clear' %>
    <% if admin_signed_in? -%>
      <p><%= link_to 'Edit Company', edit_company_path(company) %></p>
      <p><%= link_to 'Delete Company', company_path(company), :method => :delete, :confirm => 'This will permanently delete the company from the participant list. Are you sure?' %></p>
    <% end -%>
  </div>
  <% if ((i+1) % 3 == 0) -%>
    <div class="clear_left"></div>
  <% end -%>
<% end -%>
